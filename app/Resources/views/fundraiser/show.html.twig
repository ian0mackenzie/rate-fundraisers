{% extends 'base.html.twig' %}

{% block body %}
    <h1>Fundraiser</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fundraiser.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ fundraiser.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ fundraiser.description }}</td>
            </tr>
            <tr>
                <th>Thumbnail</th>
                <td>{{ fundraiser.thumbnail }}</td>
            </tr>
            <tr>
                <th>Createddate</th>
                <td>{% if fundraiser.createdDate %}{{ fundraiser.createdDate|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fundraiser_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('fundraiser_edit', { 'id': fundraiser.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
