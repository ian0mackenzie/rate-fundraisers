{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please sign in</h3>
                </div>
                <div class="panel-body">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

    <form method="post">
        <div class="form-group">
            <label for="username">Email:</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" required autofocus>
        </div>

        <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" name="_password" id="password" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <button class="btn btn-lg btn-primary" type="submit">
                            Sign in
                        </button>
                    </form>

                    <hr>
                    <p class="text-center">
                        Don't have an account? <a href="{{ path('fos_user_registration_register') }}">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
